and(
    or(
        is_approaching(
            vehicle-ego,
            intersection.start_s
        ),
        is_waiting(
            vehicle-ego,
            intersection.start_s
        )
    ),
    is_color(
        traffic_light-self,
        unknown
    ),
    is_color(
        traffic_light-main,
        red
    ),
    is_direction(
        vehicle-ego.lane,
        right
    ),
    or(
        and(
            cross(
                vehicle.boundary,
                intersection.boundary
            ),
            ==(
                vehicle.lane.way_id,
                1
            ),
            is_direction(
                vehicle.lane,
                straight
            ),
            is_yield(
                vehicle-ego,
                vehicle,
                intersection.start_s,
                intersection.end_s
            ),
            <=(
                GetADCStopDeceleration,
                apollo::planning::TrafficRule.config_.traffic_light.max_stop_deceleration
            )
        ),
        <(
            vehicle-ego.arrive_time,
            unprotected_right_turn.stop_duration_sec
        )
    )
)