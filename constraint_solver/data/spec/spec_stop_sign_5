and(
    <=(
        -(
            vehicle.stop_line,
            vehicle.size.s
        ),
        max_valid_stop_distance
    ),
    >=(
        -(
            vehicle.stop_line,
            vehicle.size.s
        ),
        0
    ),
    is_waiting(
        vehicle-ego,
        intersection.start_s
    ),
    is_direction(
        vehicle-ego.lane,
        left
    ),
    or(
        and(
            is_int_val(
                vehicle.lane.way_id,
                2
            ),
            or(
                is_direction(
                    vehicle.lane,
                    right
                ),
                is_direction(
                    vehicle.lane,
                    straight
                )
            )
        ),
        and(
            or(
                is_int_val(
                    vehicle.lane.way_id,
                    1
                ),
                is_int_val(
                    vehicle.lane.way_id,
                    3
                )
            ),
            is_direction(
                vehicle.lane,
                straight
            )
        ),
        is_yield(
            vehicle-ego,
            vehicle,
            intersection.start_s,
            intersection.end_s
        )  
    )
)