and(
    <=(
        vehicle.stop_line,
        apollo::planning::scenario::stop_sign::StopSignUnprotectedStageCreep.scenario_config_.max_valid_stop_distance
    ),
    >=(
        vehicle.stop_line,
        0
    ),
    <=(
        vehicle-ego.stop_line,
        apollo::planning::scenario::stop_sign::StopSignUnprotectedStageCreep.scenario_config_.max_valid_stop_distance
    ),
    >=(
        vehicle-ego.stop_line,
        0
    ),
    is_direction(
        vehicle-ego.lane,
        left
    ),
    or(
        and(
            is_int_val(
                vehicle.lane.way_id,
                2
            ),
            or(
                is_direction(
                    vehicle.lane,
                    right
                ),
                is_direction(
                    vehicle.lane,
                    straight
                )
            )
        ),
        and(
            or(
                is_int_val(
                    vehicle.lane.way_id,
                    1
                ),
                is_int_val(
                    vehicle.lane.way_id,
                    3
                )
            ),
            is_direction(
                vehicle.lane,
                straight
            )
        )   
    )
)