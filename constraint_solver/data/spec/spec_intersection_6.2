and(
    is_waiting(
        vehicle-ego,
        intersection.start_s
    ),
    is_color(
        traffic_light-self,
        unknown
    ),
    is_color(
        traffic_light-main,
        red
    ),
    is_direction(
        vehicle-ego.lane,
        left
    ),
    cross(
        vehicle.boundary,
        intersection.boundary
    ),
    ==(
        vehicle.lane.way_id,
        3
    ),
    or(
        is_direction(
            vehicle.lane,
            left
        ),
        is_direction(
            vehicle.lane,
            straight
        )
    ),
    is_yield(
        vehicle-ego,
        vehicle,
        intersection.start_s,
        intersection.end_s
    )
)